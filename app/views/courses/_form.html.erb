<%= form_for @course do |f| %>

	<% if @course.errors.any? %>
	  <div id="errorExplanation">
		<h2><%= pluralize(@course.errors.count, "error") %> prohibited
		  this course from being created:</h2>
		<ul>
		<% @course.errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		<% end %>
		</ul>
	  </div>
  <% end %>
  
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :start %> <br>
		<%= f.datetime_select :start %>
	</p>
	
	<p>
		<%= f.label :end %> <br>
		<%= f.datetime_select :end %>
	</p>
	
	<p>
		<%= f.label :class_location %><br>
		<%= f.text_field :class_location %>
	</p>
	
	<p>
		<%= f.label :max_capacity %><br>
		<%= f.text_field :max_capacity %>
	</p>
	
	<p>
		<%= f.label :organization_id %><br>
		<%= f.collection_select(:organization_id, Organization.all, :id, :name) %>
	</p>
	
	<p>
		<%= f.label :instructors %><br>
		<%= f.collection_select(:instructor_ids, @instructors, :id, :to_s, {}, {:multiple=> true}) %>
	</p>
	
	<p>
		<%= f.label :web_description %><br>
		<%= f.text_area :web_description %>
	</p>
	
	<p>
		<%= f.label :email_description %><br>
		<%= f.text_area :email_description %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
	
<% end %>
